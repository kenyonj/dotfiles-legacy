# shared defaults since both are gmail accounts
defaults
host smtp.gmail.com
port 587
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account gmail
from kenyonj@gmail.com
user kenyonj@gmail.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mutt/msmtp-personal.gpg"

account thoughtbot
from justin@thoughtbot.com
user justin@thoughtbot.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mutt/msmtp-work.gpg"

account default : personal
