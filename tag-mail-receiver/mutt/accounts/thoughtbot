# vim: ft=muttrc
set from          = "justin@thoughtbot.com"
set sendmail      = "/usr/bin/muttdown -c $HOME/.mutt/muttdown.thoughtbot.yaml"
set mbox          = "+thoughtbot/archive"
set postponed     = "+thoughtbot/drafts"
set record        = "+thoughtbot/sent"

macro index       G   "<shell-escape>mbsync thoughtbot<enter>" \
                      "refresh mailbox"
macro index       gi  "<change-folder>+thoughtbot/INBOX<enter>" \
                      "go to the INBOX"
macro index       gT  "<change-folder>+gmail/INBOX<enter>" \
                      "previous account"
macro index       gt  "<change-folder>+fastmail/INBOX<enter>" \
                      "next account"
macro index       ga  "<change-folder>+thoughtbot/archive<enter>" \
                      "go to the archive"
macro index       gs  "<change-folder>+thoughtbot/sent<enter>" \
                      "go to sent mail"
macro index,pager \#  "<save-message>+thoughtbot/trash<enter>" \
                      "move message to the trash"
macro index,pager !   "<save-message>+thoughtbot/spam<enter>" \
                      "mark message as spam"
macro index,pager e   "<save-message>+thoughtbot/archive<enter>" \
                      "Archive the message"
macro index,pager E   "<tag-thread>;s+thoughtbot/archive<enter>" \
                      "Archive the thread"
