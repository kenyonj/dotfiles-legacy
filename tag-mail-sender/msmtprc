# shared defaults since both are gmail accounts
defaults
host smtp.gmail.com
port 587
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account gmail
from kenyonj@gmail.com
user kenyonj@gmail.com
passwordeval "$HOME/.local/bin/getnetrc kenyonj@gmail.com"

account thoughtbot
from justin@thoughtbot.com
user justin@thoughtbot.com
passwordeval "$HOME/.local/bin/getnetrc justin@thoughtbot.com"

account fastmail
host mail.messagingengine.com
port 465
from justin@kenyon.me
user jpk@fastmail.com
passwordeval "$HOME/.local/bin/getnetrc jpk@fastmail.com"

account default : gmail
