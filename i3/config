set $mod Control

# font for window titles. ISO 10646 = Unicode
font pango: Monospace 8

# User Mouse+$mod to drag floating windows to a position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Mod1+Q kill

# start dmenu
bindsym $mod+d exec dmenu_run

# i3 shorcuts for reload/restart/exit
bindsym $mod+Mod1+C reload
bindsym $mod+Mod1+R restart
bindsym $mod+Mod1+E exit

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Mod1+H move left
bindsym $mod+Mod1+J move down
bindsym $mod+Mod1+K move up
bindsym $mod+Mod1+L move right

# horizontal split
#bindsym $mod+ split h

# vertical split
bindsym $mod+Mod1+| split v

# zoom
bindsym $mod+Mod1+Z fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling/floating
bindsym $mod+Mod1+space floating toggle

# change focus between tiling/floating windows
bindsym $mod+space focus mode_toggle

# next/previous workspace
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left
bindsym $mod+Tab workspace back_and_forth

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Mod1+1 move container to workspace 1
bindsym $mod+Mod1+2 move container to workspace 2
bindsym $mod+Mod1+3 move container to workspace 3
bindsym $mod+Mod1+4 move container to workspace 4
bindsym $mod+Mod1+5 move container to workspace 5
bindsym $mod+Mod1+6 move container to workspace 6
bindsym $mod+Mod1+7 move container to workspace 7
bindsym $mod+Mod1+8 move container to workspace 8
bindsym $mod+Mod1+9 move container to workspace 9
bindsym $mod+Mod1+0 move container to workspace 10

# change border
bindsym $mod+b border toggle

# scratchpad
bindsym $mod+m move scratchpad
bindsym $mod+o scratchpad show

# resize window
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # back to normal
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# brightness control
bindsym XF86MonBrightnessUp exec /usr/bin/xbacklight -inc 10
bindsym XF86MonBrightnessDown exec /usr/bin/xbacklight -dec 5

# one bar on both screens
bar {
  colors {
    # Whole color settings
    background #000000
    statusline #ffffff
    separator #666666

    #Type               border      background  font
    focused_workspace   #008fff     #007fff     #ffffff
    active_workspace    #333333     #5f676a     #ffffff
    inactive_workspace  #333333     #222222     #888888
    urgent_workspace    #aa0000     #990000     #ffffff
  }

  # i3bar position
  position top

  # using custom i3status.conf
  status_command i3status -c ~/.i3/i3status.conf
}

# autostart
exec urxvt -name scratchpad -e zsh
exec --no-startup-id nm-applet
exec --no-startup-id feh --bg-fill ~/.i3/dark-pattern.jpg
exec ~/.i3/autostart

# Custom Keybinds
bindsym $mod+Mod1+Shift+L exec sh ~/.i3/i3lock.sh
bindsym Print exec scrot '%Y-%m-%d-%T_$wx$h_scrot.png' -e 'mv $f ~/Downloads/screenshots/'
