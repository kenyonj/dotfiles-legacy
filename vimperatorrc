" vimperator

" remap capital Q for closing tabs
nnoremap Q q

" capital K and J to switch tabs
nnoremap K <gt>
nnoremap J <gT>

" scroll three times as fast
nnoremap j 3j
nnoremap k 3k
nnoremap h 3h
nnoremap l 3l

" show link destination in status line
set showstatuslinks=1

" hide stuff in the GUI
set toolbars=noaddons,nobookmarks,nomenu,navigation,tabs

" enable pipelining
set! network.http.pipelining=true
set! network.http.pipelining.abtest=false
set! network.http.pipelining.aggressive=true
set! network.http.pipelining.max-optimistic-requests=3
set! network.http.pipelining.maxrequests=12
set! network.http.pipelining.maxsize=300000
set! network.http.pipelining.read-timeout=60000
set! network.http.pipelining.reschedule-on-timeout=true
set! network.http.pipelining.reschedule-timeout=15000
set! network.http.max-connections=256
set! network.http.max-connections-per-server=6

" new tab page is about:blank
set! browser.newtab.url=about:blank

set animations
colorscheme indigo
set hintchars=hjklasdfgyuiopqwertnmzxcvb

hi CompItem font-family: source code pro;
hi CmdLine>* font-family: source code pro;
hi CompTitle font-family: source code pro; background: -moz-linear-gradient(19% 75% 90deg, #2c2c2f, #2a2a2f, #2f2f2f 100%);
hi Title color: orchid; background: #1c1c1c; font-family:source code pro;
hi StatusLine color: #555555; background: transparent; font-family: source code pro; padding-right: 6px;
hi CompMsg margin-left: 16px; font-family: source code pro;
hi ModeMsg color: #555555; background: #1c1c1c; font-family: source code pro; padding-left: 4px;
hi ErrorMsg color: #ffffff; background: #440000; font-family: source code pro;
hi InfoMsg color: #d0d0d0; background: #1c1c1c; font-family: source code pro;
hi CmdLine -append font-size:16px;
hi CompDesc -append font-size:16px;
