# vim: ft=muttrc
set from          = "justin@thoughtbot.com"
set sendmail      = "/usr/bin/msmtp -a thoughtbot"
set mbox          = "+thoughtbot/archive"
set postponed     = "+thoughtbot/drafts"

macro index gi      "<change-folder>+thoughtbot/INBOX<enter>" \
                    "go to the INBOX"
macro index gt      "<change-folder>+gmail/INBOX<enter>" \
                    "next account"
macro index \Cr     "<shell-escape>mbsync --pull-new thoughtbot-inbox<enter>" \
                    "sync IMAP"
macro index D       "<save-message>+thoughtbot/trash<enter>" \
                    "move message to the trash"
macro index S       "<save-message>+thoughtbot/spam<enter>" \
                    "mark message as spam"
macro index,pager y "<save-message>+thoughtbot/archive<enter>" \
                    "Archive"
