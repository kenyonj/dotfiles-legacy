# vim: ft=muttrc
set from          = "kenyonj@gmail.com"
set sendmail      = "/usr/bin/muttdown -c /home/kenyonj/.mutt/muttdown.gmail.yaml"
set mbox          = "+gmail/archive"
set postponed     = "+gmail/drafts"

macro index gi      "<change-folder>+gmail/INBOX<enter>" \
                    "go to the INBOX"
macro index gt      "<change-folder>+thoughtbot/INBOX<enter>" \
                    "next account"
macro index,pager a "<change-folder>+gmail/archive<enter>" \
                    "go to the archive"
macro index \Cr     "<shell-escape>mbsync --pull-new gmail-inbox<enter>" \
                    "sync IMAP"
macro index D       "<save-message>+gmail/trash<enter>" \
                    "move message to the trash"
macro index S       "<save-message>+gmail/spam<enter>" \
                    "mark message as spam"
macro index,pager y "<save-message>+gmail/archive<enter>" \
                    "Archive"
macro index ,D      "<tag-pattern>all<enter><tag-prefix><save-message>+gmail/trash<enter>" \
                    "delete all"
set query_command = "docker run --rm --volumes-from gc-config \
  pbrisbin/google-contacts mutt-query kenyonj@gmail.com '%s'"
