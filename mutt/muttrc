# vim: ft=muttrc

  set askcc
  set beep_new
unset confirmappend
  set delete
  set date_format       = "%R - %a %e %b %Y"
  set display_filter    = ~/.mutt/plugins/display_filter.sh
  set edit_headers
  set editor            = "vim -c 'set filetype=mail' +'norm 1}' +'normal o' +startinsert"
  set fast_reply
  set folder            = ~/.mail
  set forward_format    = "Fwd: %s"
  set forward_quote
  set header_cache      = ~/.mutt/cache
unset help
  set include
  set index_format      = "[%Z]  %D  %-20.20F [%?y?%-8.8y&--------?] %s"
  set mail_check        = 0
  set mailcap_path      = ~/.mutt/mailcap
unset mark_old
unset markers
  set mbox_type         = Maildir
  set menu_scroll
  set mime_forward
  set pager_context     = 5
  set pager_index_lines = 10
  set pager_stop
  set pipe_decode
  set realname          = "Justin Kenyon"
unset record
  set reply_to
  set reverse_name
unset sig_dashes
  set sig_on_top        = yes
  set signature         = ~/.mutt/signature
  set sort              = threads
  set sort_aux          = reverse-last-date-received
  set spoolfile         = "+gmail/INBOX"
  set status_chars      = " *%A"
  set status_format     = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"
  set strict_threads
  set text_flowed       = yes
  set thorough_search
  set tilde
  set timeout           = 3
  set tmpdir            = ~/.mutt/temp

alternates ^justin@kenyon\.me .*@justinkenyon\.com .*@thejpk\.com

auto_view text/html
alternative_order text/calendar text/plain text/enriched text/html

ignore *
unignore from: to: cc: date: subject: X-Label:
hdr_order from: to: cc: date: subject: X-Label:

macro index,pager A "<pipe-message>pycard-import<enter>" "add sender address to pycardsyncer"

set query_command = "/home/kenyonj/.pyenv/shims/pc_query -m '%s'"
bind editor <Tab> complete-query

source ~/.mutt/colors
source ~/.mutt/labels
source ~/.mutt/mailboxes
source ~/.mutt/bindings
source ~/.mutt/macros
source ~/.mutt/gpg
source ~/.mutt/hooks
